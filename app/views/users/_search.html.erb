<!--user-->
  <table class = 'table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
    </thead>
    <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
    </tbody>
  </table>